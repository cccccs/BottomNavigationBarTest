<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/mtoolbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
           >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="兼职标题"
                    android:textSize="16sp"
                    android:layout_margin="6dp"
                    android:layout_gravity="center"

                    android:textColor="@color/secondary_text"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/divider"
                    android:layout_margin="6dp"
                    />

                <EditText
                    android:id="@+id/job_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入兼职标题"
                    android:textColorHint="@color/grays"
                    android:textSize="16sp"
                    android:background="@null"
                    android:layout_gravity="center"
                    app:theme="@style/MyInputTextLayout"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"
                android:layout_margin="4dp"
                />
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linear_type">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="兼职类型"
                    android:textSize="16sp"
                    android:layout_margin="6dp"
                    android:layout_gravity="center"

                    android:textColor="@color/secondary_text"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/divider"
                    android:layout_margin="6dp"
                    />

                <CheckBox
                    android:id="@+id/type_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableRight="@drawable/selector_stock_arrow"
                    android:drawableEnd="@drawable/selector_stock_arrow"
                    android:layout_gravity="center"
                    android:text="请选择"
                    android:drawablePadding="2dp"
                    android:textColor="@drawable/selector_text_stock"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"
                android:layout_margin="4dp"
                />
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="工作日期"
                    android:textSize="16sp"
                    android:layout_margin="6dp"
                    android:layout_gravity="center"

                    android:textColor="@color/secondary_text"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/divider"
                    android:layout_margin="6dp"
                    />

                <EditText
                    android:id="@+id/work_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入工作日期"
                    android:textColorHint="@color/grays"
                    android:textSize="16sp"
                    android:background="@null"
                    android:layout_gravity="center"
                    app:theme="@style/MyInputTextLayout"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"
                android:layout_margin="4dp"
                />
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上班时段"
                    android:textSize="16sp"
                    android:layout_margin="6dp"
                    android:layout_gravity="center"

                    android:textColor="@color/secondary_text"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/divider"
                    android:layout_margin="6dp"
                    />

                <EditText
                    android:id="@+id/work_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入上班时段"
                    android:textColorHint="@color/grays"
                    android:textSize="16sp"
                    android:background="@null"
                    android:layout_gravity="center"
                    app:theme="@style/MyInputTextLayout"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"
                android:layout_margin="4dp"
                />
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="招聘人数"
                    android:textSize="16sp"
                    android:layout_margin="6dp"
                    android:layout_gravity="center"

                    android:textColor="@color/secondary_text"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/divider"
                    android:layout_margin="6dp"
                    />

                <EditText
                    android:id="@+id/job_people_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="请输入有效数字"
                    android:textColorHint="@color/grays"
                    android:textSize="16sp"
                    android:background="@null"
                    android:layout_gravity="center"
                    app:theme="@style/MyInputTextLayout"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/secondary_text"
                    android:text="人"
                    android:textSize="16sp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginStart="50dp"
                    android:layout_gravity="center"
                />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"
                android:layout_margin="4dp"
                />
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linear_pay">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="工资待遇"
                    android:textSize="16sp"
                    android:layout_margin="6dp"
                    android:layout_gravity="center"

                    android:textColor="@color/secondary_text"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/divider"
                    android:layout_margin="6dp"
                    />

                <EditText
                    android:id="@+id/job_pay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="请输入有效数字"
                    android:textColorHint="@color/grays"
                    android:textSize="16sp"
                    android:background="@null"
                    android:layout_gravity="center"
                    app:theme="@style/MyInputTextLayout"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"/>
                <CheckBox
                    android:id="@+id/pay_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:layout_gravity="center"
                    android:text="元/天"
                    android:layout_marginLeft="50dp"
                    android:layout_marginStart="50dp"
                    android:textSize="16sp"
                    android:textColor="@color/blue"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"
                android:layout_margin="4dp"

                />
            <LinearLayout
                android:id="@+id/linear_sex"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="性别要求"
                    android:textSize="16sp"
                    android:layout_margin="6dp"
                    android:layout_gravity="center"

                    android:textColor="@color/secondary_text"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/divider"
                    android:layout_margin="6dp"
                    />
                <CheckBox
                    android:id="@+id/sex_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:layout_gravity="center"
                    android:text="不限"
                    android:textSize="16sp"
                    android:drawablePadding="2dp"
                    android:textColor="@color/blue"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"
                android:layout_margin="4dp"
                />
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="兼职描述"
                    android:textSize="16sp"
                    android:layout_margin="6dp"
                    android:layout_gravity="top"

                    android:textColor="@color/secondary_text"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/divider"
                    android:layout_margin="6dp"
                    />

                <EditText
                    android:id="@+id/job_detail_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="请输入相关的工作内容，岗位要求等，20-2000字"
                    android:textColorHint="#bdbdbd"
                    android:textSize="16sp"
                    android:background="@null"
                    android:layout_gravity="top"
                    app:theme="@style/MyInputTextLayout"
                    android:inputType="textMultiLine"
                    android:minLines="5"
                    android:singleLine="true"/>
            </LinearLayout>
                </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="#eeeeee"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linear_place">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="工作地址"
                    android:textSize="16sp"
                    android:layout_margin="6dp"
                    android:layout_gravity="center"

                    android:textColor="@color/secondary_text"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/divider"
                    android:layout_margin="6dp"
                    />

                <CheckBox
                    android:id="@+id/place_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:layout_gravity="center"
                    android:text="请选择"
                    android:textSize="16sp"
                    android:drawablePadding="2dp"
                    android:textColor="@color/blue"
                    />
            </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="#eeeeee"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系姓名"
                    android:textSize="16sp"
                    android:layout_margin="6dp"
                    android:layout_gravity="center"

                    android:textColor="@color/secondary_text"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/divider"
                    android:layout_margin="6dp"
                    />

                <EditText
                    android:id="@+id/job_host"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入负责人姓名"
                    android:textColorHint="@color/grays"
                    android:textSize="16sp"
                    android:background="@null"
                    android:layout_gravity="center"
                    app:theme="@style/MyInputTextLayout"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"
                android:layout_margin="4dp"
                />
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系电话"
                    android:textSize="16sp"
                    android:layout_margin="6dp"
                    android:layout_gravity="center"

                    android:textColor="@color/secondary_text"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/divider"
                    android:layout_margin="6dp"
                    />

                <EditText
                    android:id="@+id/job_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入联系电话"
                    android:textColorHint="@color/grays"
                    android:textSize="16sp"
                    android:background="@null"
                    android:layout_gravity="center"
                    app:theme="@style/MyInputTextLayout"
                    android:singleLine="true"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"
                android:layout_margin="4dp"
                />
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系邮箱"
                    android:textSize="16sp"
                    android:layout_margin="6dp"
                    android:layout_gravity="center"

                    android:textColor="@color/secondary_text"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/divider"
                    android:layout_margin="6dp"
                    />

                <EditText
                    android:id="@+id/job_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入邮箱"
                    android:textColorHint="@color/grays"
                    android:textSize="16sp"
                    android:background="@null"
                    android:layout_gravity="center"
                    app:theme="@style/MyInputTextLayout"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"/>
            </LinearLayout>

            </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="#eeeeee"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue"
                android:text="提交"
                android:textSize="18sp"
                android:textColor="#ffffff"/>



            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</LinearLayout>