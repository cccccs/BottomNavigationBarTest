<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/myself_linear_layout"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextAppearance="@style/Toolbar_TextAppearance_White"
        />
    </android.support.design.widget.AppBarLayout>
    <android.support.v7.widget.CardView
        android:id="@+id/myself_personal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="1.5dp"
        app:cardCornerRadius="0dp"
        app:cardMaxElevation="1dp"
        app:cardUseCompatPadding="false"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/myself_personal_CImage"
            android:layout_margin="6dp"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@mipmap/ic_launcher"
            app:civ_border_width="2dp"
            app:cardCornerRadius="0dp"
            app:civ_border_color="#FFFFFF"/>
            <TextView
                android:id="@+id/myself_personal_name"
                android:text="请登录/注册"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/myself_third_cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                app:cardElevation="1.5dp"
                app:cardCornerRadius="0dp"
                app:cardMaxElevation="1dp"
                app:cardUseCompatPadding="false">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                    android:id="@+id/myself_first_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:textSize="20sp"
                    />
                <TextView
                    android:id="@+id/myself_second_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"

                    android:textSize="20sp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="#FaFaFa"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="我的收藏"
                    android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/myself_four_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:text="我的申请"
                        android:textSize="20sp"/>
                    <TextView
                        android:id="@+id/myself_five_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:text="我的发布"
                        android:textSize="20sp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>


</LinearLayout>