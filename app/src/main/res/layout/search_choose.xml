<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="40dp">
    <LinearLayout
        android:id="@+id/place_linear"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:orientation="vertical">
        <CheckBox
            android:id="@+id/place_cb"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableRight="@drawable/selector_stock_arrow"
            android:drawableEnd="@drawable/selector_stock_arrow"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="区域"
            android:drawablePadding="2dp"
            android:textColor="@drawable/selector_text_stock"
            android:textSize="15sp"
            />
    </LinearLayout>
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#F0F0F0"/>
    <LinearLayout
        android:id="@+id/type_linear"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:orientation="vertical">
        <CheckBox
            android:id="@+id/type_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:button="@null"
            android:layout_marginTop="10dp"
            android:drawablePadding="2dp"
            android:drawableRight="@drawable/selector_stock_arrow"
            android:drawableEnd="@drawable/selector_stock_arrow"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="职位类型"
            android:textColor="@drawable/selector_text_stock"
            android:textSize="15sp"/>
    </LinearLayout>
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"

        android:background="#F0F0F0"/>
    <LinearLayout
        android:id="@+id/order_linear"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:orientation="vertical">
        <CheckBox
            android:id="@+id/order_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:button="@null"
            android:layout_marginTop="10dp"
            android:drawablePadding="2dp"
            android:drawableRight="@drawable/selector_stock_arrow"
            android:drawableEnd="@drawable/selector_stock_arrow"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="综合排序"
            android:textColor="@drawable/selector_text_stock"
            android:textSize="15sp"/>
    </LinearLayout>

</LinearLayout>